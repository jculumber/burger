<center>
  <img src="../public/assets/img/burger.png">
  <h1>Eat-Da-Burger!</h1>

{{!-- <h2>Burgers that are not eaten!</h2> --}}

<ol class="notDevoured">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ol>

{{!-- <h2>Burgers that are eaten!</h2> --}}

<ol class="alreadyEaten">
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ol>

{{!-- <h2>Add a Burger</h2> --}}
<form class="create-form">

  <div class="form-group">
    <textarea rows="4" cols="50" type="text" id="ca" name="burger_name"></textarea>
  </div>

  <button type="submit" id="newBurgerSubmit">Submit</button>
  <p>Enter a burger you want to eat. Click the "Submit" button.</p>
</form>
</center>